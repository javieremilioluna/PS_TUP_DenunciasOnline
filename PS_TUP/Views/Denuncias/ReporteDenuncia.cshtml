@model PS_TUP.Models.DTO.ReporteDenunciaPDF

@{
    ViewBag.Title = "Reporte Denuncia";
    Layout = null;
}


<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
