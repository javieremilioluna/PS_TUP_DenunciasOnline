@model IEnumerable<PS_TUP.RedesSocEmpresas>

@{
    ViewBag.Title = "Redes Sociales";
}

<!-- Modal -->
<div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">X</button>*@
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    Cargando...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<h2 class="text-center p-5 text-uppercase">Tus Redes Sociales Oficiales</h2>

<div class="row justify-content-center">
    <div class="col-md-7">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>

                    <th>
                        <label>RED</label>
                    </th>
                    <th>
                        <label>LINK</label>
                    </th>
                    <th>
                        <label>DESCRIPCIÓN</label>
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle ">
                            @Html.DisplayFor(modelItem => item.Red)
                        </td>

                        <td class="align-middle ">
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>

                        <td class="align-middle ">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>

                            <a data-bs-target="#myModal" class="btnBorrarRed btn btn-lg text-dark delete-button float-end" data-bs-toggle="modal" data-id="@item.IdRegRed"><i class="far fa-trash-alt"></i></a>
                            <a data-bs-target="#myModal" class="btnEditarRed btn btn-lg text-dark edit-button float-end" data-bs-toggle="modal" data-id="@item.IdRegRed"><i class="far fa-edit"></i></a>

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.IdRegRed }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IdRegRed })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <a id="btnNuevaRed" data-bs-toggle="modal" data-bs-target="#myModal" class="btn btn-primary d-block p-3 m-3 fw-bold">Agregar Red Social</a>
                </div>
            </div>
        </div>


        <br />
        <p class="text-center">
            @Html.ActionLink("Volver", "VerDatos", "Cuenta")
        </p>
    </div>
</div>

