@model IEnumerable<PS_TUP.RedesSocEmpresas>


@{
    ViewBag.Title = "Redes Sociales";
    PS_TUP.Models.TipoEmpresa.Empresas empresa = (PS_TUP.Models.TipoEmpresa.Empresas)ViewBag.empresa;
}

@{

    var items = empresa;
}

<head>
    <link rel="stylesheet" href="~/Content/Empresas.css" />
</head>

<h2 class="text-center p-5 text-uppercase">Redes Sociales Oficiales de @items.nombreComercial </h2>

<div class="row justify-content-center  ">
    <div class="col-md-10 ">
        <table class="table table-striped table-hover tbl-container bdr ">
            <tbody>
                <tr>
                    <th>
                        <label>RED</label>
                    </th>

                    <th>
                        <label>LINK</label>
                    </th>
                    <th>
                        <label>DESCRIPCIÓN</label>
                    </th>

                </tr>


                @foreach (var item in Model)
                {
                <tr class="">
                    <td class="align-middle ">
                        @Html.DisplayFor(modelItem => item.Red)
                    </td>

                    <td class="align-middle ">
                        <a href="@Html.DisplayFor(modelItem => item.Link)">@Html.DisplayFor(modelItem => item.Link)</a> 
                    </td>

                    <td class="align-middle ">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <br />
        <div class="text-center">
            <a href="@Url.Action("DetalleEmpresa", "Home", new {@idEmpresa= items.idEmpresa})" class="btn btn-light p-4 underlineHover "> < Regresar </a>
        </div>


    </div>
</div>

