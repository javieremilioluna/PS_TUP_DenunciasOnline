
@{
    ViewData["Title"] = "Inicio";
}

<head>
    <link rel="stylesheet" href="~/Content/Empresas.css" />
</head>
<br /><br /><br />
<body class="bg-light">
    <div class="container-fluid ">
        <div class="row ">

            <div class="col-md-6 ">
                <div class="wrapper">
                    <div id="formContentIndex">
                        <br /><br />
                        <h3 class="text-center text-uppercase gris ps-4 pe-4">INFORMACIÓN OFICIAL DE EMPRESAS REGISTRADAS</h3>
                        <h5 class="text-center gris">PREVENCIÓN DE FRAUDES</h5>
                        @using (Html.BeginForm("ResultadosBusqueda", "Home", FormMethod.Get))
                        {
                            @Html.AntiForgeryToken()


                            <form class="text-center" id="buscar" name="buscar" role="search">
                                <div class="form-group ps-5 pe-5 ">
                                    @Html.TextBox("nombreComercial", null, new { @class = "", @id = "EMPRESA", @onkeypress = "soloLetras(event)", @placeholder = "EMPRESA", @name = "EMPRESA", @maxlength = "45"
                                    , required = "required"
                               })

                                </div>

                                <div class=" pb-0  " style="padding-left: 20px;">
                                    <input type="submit" id="buscar" class="ms-0 " value="Buscar" />
                                </div>

                                <p class="p-5 pt-0 gris">
                                    Busque la empresa que desee para acceder a la información acerca de medios de contacto oficiales y sorteos.
                                </p>
                            </form>
                        }

                    </div>
                </div>
            </div>

            <div class="col-md-6 ">
                <div class="wrapper">
                    <div id="formContentIndex">
                        <br /> <br />
                        <h3 class="text-center text-uppercase gris ps-4 pe-4">Cibercrimen - Denuncias Online</h3>
                        <h5 class="text-center gris">ACCEDER AL FORMULARIO</h5>
                        <img class="img-fluid p-3 ps-4  " src="~/Images/denuncia.jpg" style="max-height:270px; border-radius: 35px;" />

                        <div class="wrapper ps-lg-3 ms-sm-3 pe-sm-3 pb-0 d-inline">
                            @*<input type="submit" class="ms-0" value="Buscar" />*@
                            <a href="@Url.Action("InfoDenuncias","Home")" class="btn btn-primary ms-lg-0">INICIAR</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <hr />
    <br />

    <div class="container-fluid col-lg-9 col-sm-12">
        <div class="row  align-items-center">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">


                    <div class="carousel-item active">
                        <img src="~/Images/1-1.png"
                             class="d-block w-100"
                             alt="..." />
                        <div class="carousel-caption d-none d-md-block pb-5">
                            <h5> <a href="@Url.Action("ConsejosRedesSociales","Home")" class="text-white" target="_blank">Más Información ></a></h5>
                        </div>
                    </div>


                    <div class="carousel-item">
                        <img src="~/Images/4.png"
                             class="d-block w-100"
                             alt="..." />
                        <div class="carousel-caption d-none d-md-block pb-5">
                            <h5> <a href="@Url.Action("ConsejosCuentasBancarias","Home")" class="text-white" target="_blank">Más Información ></a></h5>

                        </div>
                    </div>

                    <div class="carousel-item">
                        <img src="~/Images/2.png"
                             class="d-block w-100"
                             alt="..." />
                        <div class="carousel-caption d-none d-md-block pb-5">
                            <h5> <a href="@Url.Action("ConsejosWhatsapp","Home")" class="text-white" target="_blank">Más Información ></a></h5>
                            @*<p>Some representative placeholder content for the second slide.</p>*@
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/3.png"
                             class="d-block w-100"
                             alt="..." />
                        <div class="carousel-caption d-none d-md-block pb-5">
                            <h5> <a href="@Url.Action("CovidRecomendaciones","Home")" class="text-white" target="_blank">Más Información ></a></h5>
                            @*<p>Some representative placeholder content for the third slide.</p>*@
                        </div>
                    </div>



                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next pb-3" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>
        </div>
    </div>

    <br /><br />

</body>