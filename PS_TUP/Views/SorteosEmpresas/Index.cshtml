@model IEnumerable<PS_TUP.SorteosEmpresas>

@{
    ViewBag.Title = "Sorteos";
}


<h2 class="text-center p-5 text-uppercase">Tus Sorteos</h2>

<div class="row justify-content-center">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>

                    <th class="align-middle text-center">
                        <label>TÍTULO</label>
                    </th>

                    <th class="align-middle text-center">
                        <label>DESCRIPCIÓN</label>
                    </th>

                    <th class="align-middle text-center">
                        <label>FECHA DE INICIO</label>
                    </th>

                    <th class="align-middle text-center ">
                        <label>FECHA DE FIN</label>
                    </th>

                    <th class="align-middle text-center">
                        <label>ACTIVO</label>
                    </th>

                    <th class="align-middle text-center col-2">

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td class="align-middle text-center">
                            @*@Html.DisplayFor(modelItem => item.FechaInicio)*@

                            @item.FechaInicio.ToString("dd/MM/yyyy")
                        </td>
                        <td class="align-middle text-center">
                            @*@Html.DisplayFor(modelItem => item.FechaFin)*@
                            @item.FechaFin.ToString("dd/MM/yyyy")
                        </td>
                        @*<td class="align-middle justify-content-start">
                                @Html.DisplayFor(modelItem => item.Ganadores)
                            </td>*@
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Activo)
                        </td>

                        <td class="align-middle text-center">

                            <a href="@Url.Action("Delete", "SorteosEmpresas", new { id = item.IdSorteo})" class=" btn btn-lg text-dark delete-button "><i class="far fa-trash-alt"></i></a>
                            <a href="@Url.Action("Edit", "SorteosEmpresas", new {id = item.IdSorteo})" class=" btn btn-lg text-dark edit-button "><i class="far fa-edit"></i></a>
                            <a href="@Url.Action("Details", "SorteosEmpresas", new {id = item.IdSorteo})" class=" btn btn-lg text-dark edit-button "><i class="far fa-eye"></i></a>

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.IdSorteo }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IdSorteo }) |<i class="bi bi-eye"></i>
                                @Html.ActionLink("Delete", "Delete", new { id = item.IdSorteo })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-6 container-fluid">
            <a href="@Url.Action("Create")" class="btn btn-primary d-block p-3 m-3 fw-bold">Agregar Sorteo</a>
        </div>


        <br />
        <p class="text-center">
            @Html.ActionLink("Volver", "VerDatos", "Cuenta")
        </p>

    </div>
</div>

