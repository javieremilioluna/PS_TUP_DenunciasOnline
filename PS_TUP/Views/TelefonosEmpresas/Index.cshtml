@model IEnumerable<PS_TUP.TelefonosEmpresas>

@{
    ViewBag.Title = "Teléfonos";
}

<!-- Modal -->
<div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">X</button>*@
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    Cargando...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<h2 class="text-center p-5 text-uppercase">Tus Teléfonos de Contacto</h2>

<div class="row justify-content-center">
    <div class="col-md-7">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>
                        <label>DESCRIPCIÓN</label>
                    </th>

                    <th>
                        <label>NÚMERO</label>
                    </th>

                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr class="">
                        <td class="align-middle ">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>

                        <td class="align-middle ">
                            @Html.DisplayFor(modelItem => item.Numero)
                        </td>

                        <td>
                            <a data-bs-target="#myModal" class="btnDelete btn btn-lg text-dark delete-button float-end" data-bs-toggle="modal" data-id="@item.IdRegTelefono"><i class="far fa-trash-alt"></i></a>
                            <a data-bs-target="#myModal" class="btnEditar btn btn-lg text-dark edit-button float-end" data-bs-toggle="modal" data-id="@item.IdRegTelefono"><i class="far fa-edit"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

        @*<a id="btnNuevo" href="@Url.Action("Create", new {@userName= User.Identity.Name})" class="btn btn-primary d-block p-3 m-3 fw-bold">Agregar Teléfono</a>*@
        <a id="btnNuevo" data-bs-toggle="modal" data-bs-target="#myModal" class="btn btn-primary d-block p-3 m-3 fw-bold">Agregar Teléfono</a>
        <br />
        <p class="text-center">
            @Html.ActionLink("Volver", "VerDatos", "Cuenta")
        </p>
    </div>
</div>

<br /><br /><br /><br /><br /><br /><br /><br />

@section scripts{

    <script src="~/Scripts/Site.js">

    </script>
}


