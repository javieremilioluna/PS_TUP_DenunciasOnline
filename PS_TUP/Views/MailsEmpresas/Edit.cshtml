@model PS_TUP.MailsEmpresas

@{
    ViewBag.Title = "Editar";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Content/VentanasModal.css" />
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form id="myForm">
        <div class="form-horizontal">
            <h4>Editar Mail</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdMailEmpresa)
            @Html.HiddenFor(model => model.UserName, new { htmlAttributes = new { @class = "" } })


            <div class="form-group">
                <label class="fw-bold">DESCRIPCIÓN</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "", @placeholder = "DESCRIPCIÓN", @maxlength = "140" } })
                    <br />
                    &nbsp  @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="fw-bold">MAIL</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "dropDown", @placeholder = "MAIL", @maxlength = "140" } })
                    <br />
                    &nbsp  @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                <div class="float-start">
                    <input type="submit" value="Confirmar" onclick="validar()" class="btn btn-primary mt-3 ms-0" />
                </div>
            </div>
        </div>
    </form>
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script>

    var validar = function () {
        debugger
        var data = $("#myForm").serialize();

        if (!$("#myForm").valid()) {

            return false;
        }

    }

</script>